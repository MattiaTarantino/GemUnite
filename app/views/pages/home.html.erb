<div class="d-flex justify-content-center align-items-end mt-5">
  <%= link_to new_user_session_path, class: "btn-home-login btn shadow rounded-pill btn-lg mr-5" do %>
    <span class="btn-home-text">Accedi</span>
  <% end %>
  <%= link_to new_user_registration_path, class: "btn btn-info shadow rounded-pill btn-lg ml-5" do %>
    <span class="btn-home-text">Registrati</span>
  <% end %>
</div>
