<head>
  <title>LogIn</title>
</head>
<body>
<div class="container py-5">
  <div class="row mb-5 mt-5">
    <div class="col-6 text-center mx-auto">
      <h2 class="login-title">Log In</h2>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body text-center d-flex flex-column align-items-center">
          <div class="bs-icon bs-icon-circle bs-icon-color shadow my-4">
            <svg class="bi bi-person" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"></path>
            </svg>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class:"form-text" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field mb-3" %>
            </div>
            <div class="field">
              <%= f.label :password, class:"form-text" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-field mb-3" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field d-flex justify-content-center align-items-top">
                <%= f.check_box :remember_me, class:"mb-1" %>
                <%= f.label :remember_me, class:"form-text ml-2" %>
              </div>
            <% end %>
            <div class="actions mb-3 d-flex justify-content-center">
              <%= f.submit "Log in", class: "btn-login-login btn shadow rounded-pill btn-lg w-100 mb-2" %>
            </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>