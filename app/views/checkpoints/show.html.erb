<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
      body {
          font-family: Arial, sans-serif;
      }
      .table-container {
          width: 70%;
          margin: 20px auto;
      }
      .no-tasks {
          text-align: center;
          font-style: italic;
          color: #888;
          margin-top: 20px;
      }
  </style>
</head>
<body>
<%= render @checkpoint %>

<div class="container mt-4">
  <% if @checkpoint.tasks.present? %>
    <div class="table-container">
      <table class="table table-bordered">
        <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Descrizione</th>
          <th>Stato</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @checkpoint.tasks.each do |task| %>
          <tr>
            <td><%= task.nome %></td>
            <td><%= task.descrizione %></td>
            <td><%if task.completato == true %>
                  <%= "completato" %>
                <% else %>
                  <%= "non completato" %>
                <% end %>
            </td>
            <td>
              <% if not task.completato %>
                <%= button_to "Segna come completato", project_checkpoint_task_change_state_path(project_id: @project.id, checkpoint_id: @checkpoint.id, task_id: task.id), method: :put, class: "btn", data: { confirm: "Are you sure?" } %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                  <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                </svg>
              <% end %>

            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="no-tasks">No tasks available.</p>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mt-3">
    <% if @role == "leader" %>
      <%= link_to "Modifica checkpoint", edit_project_checkpoint_path(project_id: @project.id, id: @checkpoint.id), class: "btn btn-primary" %>
      <%= button_to "Elimina checkpoint", project_checkpoint_path(project_id: @project.id, id: @checkpoint.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    <% end %>
    <%= link_to "Nuovo task",  new_project_checkpoint_task_path(project_id: @project.id, checkpoint_id: @checkpoint.id) %>
  </div>
</div>
<%= link_to "Torna al progetto", project_show_my_project_path(project_id: @project.id), class: "btn btn-primary" %>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

