<h1>Requests</h1>
<div id="requests">
  <% if @requests.empty? %>
    <p>Non ci sono richieste di partecipazione in sospeso</p>
  <% else %>
    <% @requests.each do |request| %>
      <%= render request %>
    <% end %>
  <% end %>
</div>
<%= link_to "Torna ai progetti", my_projects_user_projects_path(user_id: @user.id) %>

