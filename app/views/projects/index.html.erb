<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<style>

    /* Add borders to the table */
    table {
        border-collapse: collapse;
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    /* Add borders to the table cells */
    th, td {
        border: 1px solid black;
        padding: 8px;
    }

    /* Add custom style for the "New project" button */
    .btn-custom-center {
        display: block;
        margin: 0 auto;
        background-color:#c3d9ff;
        color: white;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
    }

    .btn-custom-center:hover {
        background-color: lightblue;
    }
    /* Style for "Show this project" link */
    .project-link {
        display: inline-block;
        background-color: #c3d9ff;
        color: white;
        border: 1px solid;
        border-radius: 4px;
        padding: 8px 15px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .project-link:hover {
        background-color: lightblue;
    }
</style>
<div id="open projects">
  <table>
    <caption style="caption-side: top">Progetti aperti:</caption>
    <thead>
    <tr>
      <th>Nome</th>
      <th>Descrizione</th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
      <% if project.stato == "aperto" %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.descrizione %></td>
          <td>Numero membri: <%= UserProject.where(:project_id => project.id).count %></td>
          <td>Ambito:
            <% project.fields.each do |field| %>
               <%= field.nome %>
            <% end %>
          </td>
          <td><%= link_to "Show this project", project_path(project.id), class: "project-link" %> </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
