
<h1>My Projects</h1>

<div id="projects">
  <table>
    <thead>
    <tr>
      <th>Nome</th>
      <th>Stato</th>
      <th>Azioni</th>

    </thead>
    <tbody>
    <% if current_user.projects.present? %>
      <% current_user.projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>

          <td><%= project.stato %></td>


          <td><%= link_to "Accedi al progetto", project_project_home_path(project), class: "project-link" %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">No projects available.</td>
      </tr>
    <% end %>
    </tr>

    </tbody>
  </table>
  <div id="new-proj" style="text-align: center; margin-bottom: 5px; width: fit-content; margin-left: auto;margin-right: auto;">
    <%= link_to "New project", new_project_path, class: "btn btn-custom-center"%>
  </div>
</div>

